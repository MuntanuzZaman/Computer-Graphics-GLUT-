       glEnd();
       glPopMatrix();




    //moon
    glPushMatrix();
    glTranslatef(0.0f,_moveE,0.0f);

    glMatrixMode(GL_MODELVIEW);
    glPushMatrix();
    glTranslatef(0.7f,0.8f,0.0f);
    glColor3d(255,255,0);
    glBegin(GL_POLYGON);
    for(int i=0;i<100;i++)
    {
        glColor4f(1.0f, 1.0f, 0.0f, 0.0f);
        float pi=3.1416;
float A=(i*2*pi)/100;
float r=0.1;
float x = r * cos(A);
float y = r * sin(A);
glVertex2f(x,y );
    }
    glEnd();
    glPopMatrix();

    glMatrixMode(GL_MODELVIEW);
    glPushMatrix();
    glTranslatef(0.75f,0.85f,0.0f);
