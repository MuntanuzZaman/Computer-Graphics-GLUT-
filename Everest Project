    glClear(GL_COLOR_BUFFER_BIT);


    glLoadIdentity();
    glPushMatrix();
    glTranslatef(position,position2, 0.0f);
    //glTranslatef(0.0f,position, 0.0f);

     //snow




    //stars

    glPushMatrix();


    glPointSize(2.0);
