    glBegin(GL_POLYGON);
    for(int i=0;i<100;i++)
    {
        glColor4f(1.0f, 1.0f, 0.0f, 0.0f);
        float pi=3.1416;
float A=(i*2*pi)/100;
float r=0.1;
float x = r * cos(A);
float y = r * sin(A);
glVertex2f(x,y );
    }
    glEnd();
    glPopMatrix();
    glPopMatrix();

    //cloud1
