void display();

void display4(int val)
{
    glutDisplayFunc(display);
}







//////////day////////////
void display2() {
    glClearColor(1.5f,1.5f,1.5f,1.0f);
    glClear(GL_COLOR_BUFFER_BIT);


    glLoadIdentity();
